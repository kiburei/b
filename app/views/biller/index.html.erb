      <h5>Education Insurance</h5>
      <%= pie_chart({"Invoiced" => rand(90..150), "Paid" => rand(20..50), "Past Due" => rand(50..150)}) %>
    </div>
  </div>

  <div class="row">
    <h4>Upload Due Policies</h4>
    <div class="">
      <%= form_tag import_path, multipart: true do %>
        <%= file_field_tag :file %>
        <%= submit_tag "Import" %>
      <% end %>
    </div>
  </div>
</div>

<div id="motor" style="display: none;">
  <h2>Motor Insurance due Policies</h2>
  <table>
    <thead>
      <th>Policy Number</th>
      <th>Amount</th>
      <th>Mpesa Number</th>
      <th>Contact Information</th>
      <th>Payment Mode</th>
      <th>Due Date</th>
      <th>Status</th>
      <th>Third Party Ref</th>
      <th>Channel Response</th>
      <th>Channel Used</th>
      <!-- add dynamic columns -->

    </thead>
    <tbody>
      <% @motor.each do |bill| %>
      <tr>
        <td><%= bill.reference_number %></td>
        <td><%= bill.amount %></td>
        <td><%= bill.mpesa_number %></td>
        <td><%= bill.contact_number %></br> <%= bill.email %></td>
        <td><%= bill.payment_mode %></td>
        <td><%= bill.due_date %></td>
        <td><%= bill.status %></td>
        <td><%= bill.third_party_ref_no %></td>
        <td><%= bill.channel_response %></td>
        <td><%= bill.channel_used %></td>
        <!-- add dynamic columns -->
        <td><%= link_to 'Mpesa', push_path(bill), method: 'post', class: 'btn blue lighten-2' %></td>
        <td> <%= link_to 'SMS', sms_path, class: 'btn blue lighten-2' %> </td>
        <td> <button onclick="email()" class="btn blue lighten-2">Email</button> </td>
      </tr>
      <% end %>
    </tbody>
  </table>

</div>

