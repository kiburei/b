  <div class="stats">
    <div class="">
      <h5>Motor Insurance</h5>
      <%= pie_chart({"Invoiced" => rand(90..150), "Paid" => rand(20..50), "Past Due" => rand(50..150)}) %>
    </div>
    <div class="">
      <h5>Health Insurance</h5>
      <%= pie_chart({"Invoiced" => rand(90..150), "Paid" => rand(20..50), "Past Due" => rand(50..150)}) %>
    </div>
    <div class="">
      <h5>General Insurance</h5>
